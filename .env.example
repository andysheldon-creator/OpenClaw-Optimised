# Copy to .env and fill with your Twilio credentials
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
# Must be a WhatsApp-enabled Twilio number, prefixed with whatsapp:
TWILIO_WHATSAPP_FROM=whatsapp:+17343367101

# --- Cost Optimization (Week 1) ---

# Ollama local LLM for simple queries (FREE)
OLLAMA_HOST=http://localhost:11434
ENABLE_OLLAMA=true
OLLAMA_MODEL=llama3.1:8b

# Cost tracking
COST_DAILY_LIMIT=2
# USD to GBP exchange rate (update periodically)
USD_TO_GBP_RATE=0.79

# --- RAG (Week 2) ---

# Enable RAG (Retrieval Augmented Generation) for smart context retrieval
ENABLE_RAG=true
# Embedding model for semantic search (pull with: ollama pull nomic-embed-text)
OLLAMA_EMBED_MODEL=nomic-embed-text
# Enable/disable embeddings (uses Ollama, falls back to hash-based)
ENABLE_EMBEDDINGS=true
# Number of semantically similar messages to retrieve
RAG_TOP_K=10
# Minimum similarity score threshold (0-1)
RAG_MIN_SCORE=0.35
# Recent messages always included for conversational coherence
RAG_RECENCY_WINDOW=4

# --- Tiered Memory (Week 3) ---

# Enable tiered memory system (SQLite FTS5 structured fact storage)
ENABLE_MEMORY=true
# Reflect interval in seconds (updates entity summaries & opinion confidence)
# Default: 86400 (24 hours)
MEMORY_REFLECT_INTERVAL=86400

# --- Hybrid Routing (Week 4) ---

# Enable hybrid routing (complexity-based model selection)
ENABLE_HYBRID_ROUTING=true
# Routing mode: aggressive (max savings), balanced (default), quality (prefer Claude)
HYBRID_ROUTING_MODE=balanced

# Enable vision routing (images â†’ Ollama Vision instead of Claude)
ENABLE_VISION_ROUTING=true
# Ollama Vision model for image analysis (pull with: ollama pull llava:7b)
OLLAMA_VISION_MODEL=llava:7b
# Maximum images to process per message
VISION_MAX_IMAGES=3

# Enable conversation summarization (compress old messages to save tokens)
ENABLE_SUMMARIZATION=true
# Messages before summarization activates
SUMMARIZE_THRESHOLD=15
# Recent messages to always keep in full
SUMMARIZE_KEEP_RECENT=6
